<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOS.MainPage"
             Title="SOS">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="50" >

            <Button Text="SOS"
                x:Name="SOSButton"
                WidthRequest="300"
                HeightRequest="300"
                BackgroundColor="Red"
                TextColor="White"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                CornerRadius="150"
                Clicked="SOSButtonClicked" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
